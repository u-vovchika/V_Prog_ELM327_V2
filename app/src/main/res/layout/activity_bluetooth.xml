<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    android:padding="26dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/container3"
        android:layout_width="397dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBluetooth"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/outline_bluetooth_disabled_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/receivedDataPower"
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:background="@drawable/button_stroke_dark_red_press_white"
            android:gravity="center"
            android:text="данные"
            android:textColor="@color/gray"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="192dp"
            android:layout_height="47dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/vprog" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnScanECU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_stroke_dark_red_press_white"
            android:text="Поиск ECU (0100)"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="DuplicateIds">

        <Button
            android:id="@+id/btnGetVoltage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_stroke_dark_red_press_white"
            android:text="Напряжение АКБ (ATRV)"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="DuplicateIds">
    <TextView
        android:id="@+id/receivedDataTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_stroke_dark_red_press_white"
        android:gravity="center"
        android:text="данные"
        android:textColor="@color/gray"
        android:textSize="25sp"
        android:textStyle="bold" />

    </LinearLayout>
    <ListView
        android:id="@+id/logListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@color/white" />


</LinearLayout>
